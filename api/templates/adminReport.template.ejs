<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        padding: 1rem;
      }
    </style>
  </head>
  <body style="font-family: Tahoma, Verdana">
    <div
      style="
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: solid 2px black;
      "
    >
      <img
        src="/client/src/assets/nebula_light.png"
        style="margin-left: 1rem"
        height="70"
        alt=""
      />
      <div style="width: fit-content; text-align: center">
        <h2>Admin <%= report.type %> report</h2>
      </div>
      <p style="font-size: medium; margin-right: 1rem"><%= date %></p>
    </div>
    <div
      style="
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      "
    >
      <h3 style="text-align: center; margin-bottom: 1rem">Overview</h3>
      <table style="border-collapse: collapse; margin-bottom: 4rem">
        <tr>
          <th>New users</td>
          <td><%= report.usersCount %></td>
        </tr>
        <tr>
          <th>Total enrollments</td>
          <td><%= report.enrollmentsCount %></td>
        </tr>
        <tr>
          <th>Total revenue</td>
          <td>&#8377; <%= report.revenue %></td>
        </tr>
        <tr>
          <th>Earnings</td>
          <td>&#8377; <%= report.earnings %></td>
        </tr>
      </table>

      <h3 style="text-align: center; margin-bottom: 1rem">Enrollments by category</h3>
      <table style="border-collapse: collapse; margin-bottom: 4rem">
        <tr>
          <th>Category</th>
          <th>No. of enrollments</th>
        </tr>
        <% report.enrollmentsByCategory.forEach(element => { %>
         <tr>
          <td><%= element.name %></td>
          <td><%= element.count %></td>
         </tr>
        <% }) %>
      </table>

      <h3 style="text-align: center; margin-bottom: 1rem">Enrollments by course</h3>
      <table style="border-collapse: collapse; margin-bottom: 4rem">
        <tr>
          <th>Course</th>
          <th>No. of enrollments</th>
        </tr>
        <% report.enrollmentsByCourse.forEach(element => { %>
         <tr>
          <td><%= element.name %></td>
          <td><%= element.count %></td>
         </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
